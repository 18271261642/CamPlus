<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#EBEBEB"
    android:layout_height="match_parent">

    <include layout="@layout/item_title_layout"/>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setPrivacyLayout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">


      <TextView
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:textSize="18sp"
          android:layout_marginStart="10dp"
          android:padding="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="隐私政策"/>



        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_right_back_img"/>


    </androidx.constraintlayout.widget.ConstraintLayout>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setUserAgreeLayout"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">


        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户协议"/>



        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_right_back_img"/>


    </androidx.constraintlayout.widget.ConstraintLayout>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">


        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="软件版本"/>


        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tmpRightImg"
            android:layout_marginEnd="8dp"
            android:id="@+id/appVersionTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="v1.0"/>



        <ImageView
            android:id="@+id/tmpRightImg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_right_back_img"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>